<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Text Editor</title>
    <link rel="stylesheet" href="./CSS/style.css">
</head>
<body>
    <%= success %>
    <%= error %>
    
    <!-- Popup -->
    <div class="popup" id="popup" style="display: none">
        <div class="popup-content">
          <span class="close" id="closePopup">&times;</span>
          <p>You pay : &#8377;<span id="popupEstimatedCost"></span></p>
          <!-- Add other popup content here -->
        </div>
      </div>
    
    <form action="/customize" method="POST" enctype="multipart/form-data">
        <div id="textPreview"></div>
        <div class="editor">
            <div class="textEdit">
                <input id="textInput" name="textInput" placeholder="Enter your text..." required></input>
                <div class="fontOptions">
                    <label for="fontFamily" required>Font Family:</label>
                    <select id="fontFamily" name="fontFamily">
                        <option value="Arial">Arial</option>
                        <option value="Verdana">Verdana</option>
                        <option value="Helvetica">Helvetica</option>
                        <option value="Arial Narrow">Arial Narrow</option>
                        <option value="Debby">Debby</option>
                        <option value="Comic Sans MS">Comic Sans MS</option>
                        <option value="Brush Script MT">Brush Script MT</option>
                        <option value="Luminari">Luminari</option>
                    </select>
                    <label for="fontSize">Font Size:</label>
                    <select id="fontSize" name="fontSize">
                        <option value="small">Small</option>
                        <option value="medium">Medium</option>
                        <option value="large">Large</option>
                    </select>
                </div>
            </div>
        </div>
        <br>
        <div class="fontColorOptions">
            <div class="color" style="background-color: red;"></div>
            <div class="color" style="background-color: orange;"></div>
            <div class="color" style="background-color: yellow;"></div>
            <div class="color" style="background-color: green;"></div>
            <div class="color" style="background-color: blue;"></div>
            <div class="color" style="background-color: purple;"></div>
            <div class="color" style="background-color: pink;"></div>
        </div>
        <input type="hidden" id="selectedColor" name="selectedColor">
        <label for="estimatedCost">Price (in rupees)</label>
        <input type="number" id="estimatedCost" name="estimatedCost" value="0" readonly>
        
        <button type="button" id="calculateCostButton">Calculate cost</button>
        
        <hr>
        <br>
        
        <label for="name">Name:</label>
        <input type="text" name="name" placeholder="Enter your name" required><br>
        
        <label for="phone1">Contact No.:</label>
        <input type="number" name="phone1" placeholder="Enter your contact no." required><br>
        
        <label for="phone2">Contact No. 2:</label>
        <input type="number" name="phone2" placeholder="Enter a different contact no." required><br>
        
        <label for="address">Address:</label>
        <input type="text" name="address" placeholder="Enter your address" required><br>

        <label for="image1">Your logo (if any):</label>
        <input type="file" name="images"><br>
        
        <!-- Make Payment Button -->
        <button type="submit" class="open" id="openPopup">Make Payment</button><br>
        
        <label for="image2">Attach payment screenshot:</label>
        <input type="file" name="images" required><br>
        
       <br>
        <button class="but-ton">Confirm Order</button>
        
    </form>
    <script src="./JS/script.js"></script>
    
</body>
</html>
